#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander');
var utils = require('../lib/utils');
var spawn = require('win-fork');
var cluster = require('cluster');
var fs = require('fs');
var cpus = require('os').cpus().length;
var join = require('path').join;
var dirname = require('path').dirname;
var resolve = require('path').resolve;
var exists = fs.existsSync;
var nodeVersion, args, proc;

/**
 * options
 */

program
  .option('-a, --app <path>', 'path to the application file')
  .option('-p, --path <path>', 'path to the application file (deprecated)')
  .option('-d, --dev', 'run in development mode')
  .option('--debug', 'run the debugger')
  .option('--debug-brk', 'run the debugger with a break on start')
  .option('--node-inspector', 'run node-debug to enable debugging in the browser')
  .option('--use-strict', 'use strict mode')
  .option('--inspect', 'Node 6.3+ Inspector to enable Chrome Dev tools debugging')
  // .option('-s, --shutdown <shutdown>', 'server shutdown timeout')
  // .option('-t, --timeout <timeout>', 'worker restart timeout')
  // .option('-l, --too-busy <toobusy>', 'too busy lag')
  .option('-w, --workers <workers>', 'number of worker processes', cpus)
  .option('-R, --worker-rotation <interval>', 'rotate workers every interval')
  .option('-P, --port <port>', 'listening port');

/**
 * examples
 */

program.on('--help', function(){
  console.log('  Examples:');
  console.log();
  console.log('    # default settings');
  console.log('    $ startup start');
  console.log();
  console.log('    # listen on port 8080');
  console.log('    $ startup start -P 8080');
  console.log();
  console.log('    # development mode');
  console.log('    $ startup start -d');
  process.exit();
});

/**
 * parse argv
 */

program.parse(process.argv);

/**
 * resolve the app path
 */

var path = utils.resolve(program.app || program.path);

/**
 * resolve the runner path
 */

var runner = resolve(__dirname, '../lib/runner');

/**
 * make sure the app exists
 */

if (!exists(path)) utils.fatal('missing main app (defaults to ' + path + ')');

/**
 * Figure out if we are running in strict mode
 */

var strict = program.useStrict
  ? '--use-strict'
  : false;

/**
 * define port
 */

if (program.port) process.env.PORT = program.port;

/**
 * run in debug mode
 */

var inspect = false;

if (program.inspect) {
  nodeVersion = parseVersion(process.versions.node);
  if (nodeVersion.major > 6 || (nodeVersion.major === 6 && nodeVersion.minor > 2)) {
    inspect = true;
  }
  else {
    var err = '\x1B[93m\x1B[5mWrong Node Version.\n\x1b[0m\x1B[97m\x1B[41mTo use the `--inspect` parameter you must be using node.js version 6.3 or greater.\nCurrently you are using node.js version: \x1B[96m'+process.version+'\x1B[0m\n';
    throw new Error(err);
  }
}

if (program.debug || program.debugBrk || inspect) {
  var debug = program.debugBrk
    ? '--debug-brk'
    : '--debug';

  // setup the arguments
  args = [
    debug,
    runner,
    path
  ];

  if (inspect) args.unshift('--inspect');
  if (strict) args.unshift(strict);

  proc = spawn('node', args, {stdio: ['inherit','inherit','pipe']});
  var needToLaunchChrome = inspect;

  proc.stderr.on('data', (data) => {
    var str = data.toString('utf8');
    process.stderr.write(str);
    if (needToLaunchChrome) {
      var i = str.indexOf('chrome-devtools:');
      if (i > -1) {
        var url = str.substr(i);
        i = url.indexOf('\n');
        if (i > -1) {
          url = url.substring(0,i);
        }

        url = url.replace(':', '/:');
        spawn('/Applications/Google Chrome.app/Contents/MacOS/Google Chrome', [url]);
        process.stderr.write('----------\n\n\x1b[33mAfter Chrome is launched you must remove the first back-slash "/" in the URL to enable the debugger.\n\x1b[33mChange \x1b[107m\x1b[30m chrome-devtools\x1b[43m/\x1b[107m:// \x1b[49m\x1b[33m to \x1b[107m\x1b[30m chrome-devtools:// \x1b[49m\x1b[33m\n\x1b[33mRemember to close old instances of the debugger/browser windows.\x1B[0m\n\n----------\n');
        needToLaunchChrome = false;
      }
    }
  });

  return proc.on('close', function(code){
    process.exit(code);
  });
}

/**
 * Run in debug mode using node-inspector
 */
if (program.nodeInspector) {
  // setup the arguments
  args = [
    runner,
    path
  ];

  if (strict) args.unshift(strict);

  proc = spawn('node-debug', args, { stdio: 'inherit', customFds: [0, 1, 2] });

  return proc.on('close', function(code){
    process.exit(code);
  });
}

/**
 * run in development mode
 */

if (program.dev || process.env.NODE_ENV === 'development') {
  utils.log('info', 'auto-reload enabled');

  var cmd = process.env.STARTUP_DEV_SCRIPT || require.resolve('node-dev/bin/node-dev');

  args = [
    runner,
    path
  ];

  if (strict) args.unshift(strict);

  proc = spawn(cmd, args, { stdio: 'inherit', customFds: [0, 1, 2] });

  return proc.on('close', function(code){
    process.exit(code);
  });
}

/**
 * run in production mode
 */

args = [
  path
];

if (strict) args.unshift(strict);

cluster.setupMaster({
  exec: runner,
  args: args
});

/**
 * spin up worker processes
 */

var currentWorkers = [];
for (var i = 0; i < program.workers; i++) {
  currentWorkers.push(cluster.fork(process.env));
}

/**
 * handle worker disconnects
 */

cluster.on('disconnect', function(worker) {
  // if we are shutting down ourselves or the cluster hasn't started yet don't do anything
  if (cluster.disconnecting || !worker.started) return;

  currentWorkers.push(cluster.fork(process.env));
});

/**
 * mark a worker as listening
 */

cluster.on('listening', function(worker, address) {
  worker.started = true;
});

/**
 * handle any signals we get
 */

process.once('SIGTERM', handleSignal('SIGTERM'));
process.once('SIGINT', handleSignal('SIGINT'));

function handleSignal(message) {
  return function() {
    // if we are already disconnecting don't do anything
    if (cluster.disconnecting) return;

    // mark the cluster as disconnecting
    cluster.disconnecting = true;

    // dive workers just a bit more time to die on their own
    var killTimer = setTimeout(function() {
      for (var id in cluster.workers) {
        var worker = cluster.workers[id];
        worker.process.kill('SIGKILL');
      }
    }, program.shutdown + 300);

    // dereference it from the loop
    if (killTimer.unref) killTimer.unref();

    // all of the workers disconnected
    cluster.disconnect(function(){
      console.log('Shutting down master');
      clearTimeout(killTimer);
    });
  };
}

if (program.workerRotation) {
  setInterval(function() {
    if (cluster.disconnecting) return;
    var worker = currentWorkers.shift();
    worker.process.kill('SIGTERM');
    worker.disconnect();
  }, parseInt(program.workerRotation, 10)).unref();
}


function parseVersion(ver) {
  var parts = ver.split('.');
  return {
    major: parseInt(parts[0] || 0, 10),
    minor: parseInt(parts[1] || 0, 10),
    patch: parseInt(parts[2] || 0, 10)
  };
}
